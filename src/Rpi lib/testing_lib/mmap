/* https://interrupt.memfault.com/blog/how-to-write-linker-scripts-for-firmware */
*/ https://github.com/dddrrreee/cs140e-20win/blob/master/libpi/memmap */

MEMORY {
  RAM (rwx) : ORIGIN = 0x80000, LENGTH = 32M
}

SECTIONS
{
    .text 0x80000 :  { KEEP(*(.text.boot))  *(.text*) }
    .data : { *(.data*) } 
    .rodata : { *(.rodata*) }
    .bss : {
        __bss_start__ = .;
        *(.bss*)
        *(COMMON)
        . = ALIGN(8);
        __bss_end__ = .;
        . = ALIGN(8);
        __heap_start__ = .;
    }
}

